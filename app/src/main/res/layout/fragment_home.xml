<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeFragmentId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentPage.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <include
        android:id="@+id/appBarID"
        layout="@layout/appbar"/>
    <TextView
        android:id="@+id/tvTypeSelectedShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/appBarID"
        android:text="ປະເພດຕົ້ນໄມ້"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/green_700"
        android:layout_marginTop="15dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCoverType"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/white_200"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tvTypeSelectedShow"
        android:layout_marginEnd="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/TypeRecyclerViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvTreeShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ລາຍການທີ່ມີ"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/green_700"
        android:layout_below="@+id/cardCoverType"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white_200"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tvTreeShow">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/TreeGridRcvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>