<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/treeCardItemId"
    android:layout_width="90dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progress_loadingImg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_700"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/ImageViewTreeShowId"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/grey"
            android:src="@drawable/cactus" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/ImageViewTreeShowId"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tvTreeNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvTreePriceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textSize="8dp"/>
            <TextView
                android:id="@+id/tvTreeRateId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rate"
                android:textSize="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">
            <ToggleButton
                android:id="@+id/btnAddToFavoriteId"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/toggle_selector"/>
            <ImageView
                android:id="@+id/btnAddToCartId"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>